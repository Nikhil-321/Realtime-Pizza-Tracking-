

    <section class="main py-8">
        <div class="container mx-auto flex items-center justify-between">
        <div class="left w-1/2">
            <h6 class="text-lg"><em>Are you hungry?</em></h6>
            <h1 class="text-6xl font-bold">Don't Wait !</h1>
            <button class="order-now rounded-full py-2 px-6">Order Now</button>

        </div>

        <div class="right w-1/2 my-4">
            <img src="/img/hero-pizza.png" alt="">
        </div>
        </div>

    </section>

    <section class="menu container mx-auto">
        <h1 class="py-8 font-bold font-xl">All Pizzas</h1>
        <div class="menu-wrapper grid grid-cols-4 col-gap-12 row-gap-12">
       

       <% pizzas.forEach(pizza => { %>

            <div class="w-64">
                <img class="h-40 mx-auto mb-4" src="/img/<%= pizza.image %>" alt="pizza.png">
    
            <div class="text-center">
            <h2 class="mb-4 text-lg font-bold"><%= pizza.name %></h2>
            <span class="size uppercase text-xs rounded-full py-2 px-4 "><%= pizza.size %></span>
            </div>
            <div class="flex items-center justify-around mt-6">
            <div>
                <span class="font-bold">â‚¹<%= pizza.price %></span>
            </div>
            <div>
                <button data-pizza= "<%= JSON.stringify(pizza) %>"  class="add-to-cart rounded-full px-6 py-1">
                    <span>+</span>
                    <span class="ml-2">Add</span>
                </button>
                </div>
            </div>
        </div>
       <% }) %>

       

   



</div>
    </section>

   